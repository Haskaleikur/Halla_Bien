<div class="jumbotron jumbotron-fluid jumbotron-hero">
  <div class='container'>
    <div class="text-center">
    <br>
    <h1>Events<h1>
    </div>
    <br>
    <br>
    <div class="text-center">

      <p id="notice"><%= notice %></p>
          <div class='container'>
          <div class="card-columns">
            <% @events.each do |event| %>
              <div class="card">
                <img src="/assets/BackToDuck.jpg" class="card-img-top imgBorder" alt="Halla Bien">
                <div class="card-body">
                  <h5 class="card-title"><%= event.title %></h5>
                  <p class="card-text"><%= event.description %><%= event.start_date %><%= event.duration %><%= event.price %><%= event.location %></p>
                  <p> <%= link_to 'Show', event, class:'btn btn-primary' %>
                  <% if current_user == event.organisator %>
                  <%= link_to 'Edit', edit_event_path(event), class:'btn btn-2' %>
                  <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-4' %></p>
                  <% end %>
                </div>
              </div>
              <% end %>
          </div>
          </div>  
          <br>

          <%= link_to 'New Event', new_event_path %>
    
      
    </div>
  </div>
</div>


  